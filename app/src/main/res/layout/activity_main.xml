<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="110dp"
    android:layout_marginRight="110dp"
    android:layout_marginTop="150dp"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:paddingTop="15dp"
        android:background="@color/colorWaterWhite"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/perehod"
        android:text="@string/calc">

    </Button>

    <ImageButton
        android:id="@+id/button1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="1"
        android:background="@color/colorWater"
        android:src="@drawable/catdog" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/textafter"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0"
        android:id="@+id/tv1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:id="@+id/tv2"
        android:text="@string/afternumb"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:paddingTop="15dp"
        android:background="@color/colorGrey"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/decrease"
        android:text="Decrease it">

    </Button>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:paddingTop="15dp"
        android:background="@color/colorGrey"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/clear"
        android:text="Clear all">

    </Button>
</LinearLayout>

